FROM node:18
WORKDIR /app
COPY package*.json ./

ENV BASE_URL=http://192.168.0.187:3001
ENV NEXTAUTH_URL=http://192.168.0.187:3001
ENV NEXT_PUBLIC_API_URL=http://192.168.0.187:8081
ENV NEXTAUTH_SECRET=NORTEAUTOPECAS
ENV PORT=3001

RUN npm install
COPY . .
RUN npm run build
EXPOSE ${SERVER_PORT}
CMD ["npm", "start"]
